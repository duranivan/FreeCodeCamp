// Variables
font-family = 'Lato', sans-serif
// parallax_img = 'https://static.pexels.com/photos/169789/pexels-photo-169789.jpeg'
parallax1_img = 'https://static.pexels.com/photos/191839/pexels-photo-191839.jpeg'
parallax2_img = 'https://static.pexels.com/photos/36024/abstract-autumn-backgrounds-beautiful.jpg'
parallax3_img = 'https://static.pexels.com/photos/258524/pexels-photo-258524.jpeg'
parallax4_img = 'https://static.pexels.com/photos/534481/pexels-photo-534481.jpeg'
hr_color = gold
grad_color = rgba(245,245,245,0.7)


// Mixins
parallax(image, height, opacity)
    background-image: url(image)
    height: height
    background-attachment: fixed
    opacity: opacity
    background-position: center
    background-repeat: no-repeat
    background-size: cover

content(image)
    font-size: 24px
    height: fit-content
    min-height: 100%
    background-image: linear-gradient(to bottom, grad_color 0%, grad_color 100%), url(image)
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover


// Style
body, html
    height: 100%
    // padding-top: 70px
    font-family: font-family

hr
    width: 100%
    margin-top: 70px
    margin-bottom: 50px
    border-top: 1px solid hr_color
    border-bottom: 1px solid rgba(0,0,0,0.2)
nav
    padding 13px !important
    transition: 0.5s
    background #3F3F3F

.top-nav-collapse
    @media (min-width 768px)
        padding 2px 13px !important

a.navbar-brand
    color #B8B8B8 !important
    &:hover, &:focus
        color #B8B8B8 !important

a.nav-link
    color #02A2EC

.anchor-adjust
    display: block
    position: relative
    top: -47px
    visibility: hidden

    @media (max-width: 540px)
        top -48px * 1.15

.parallax1
    // parallax(parallax_img, 850px, 0.65)
    parallax(height: 100%, opacity: 0.95, image: parallax1_img)

.parallax2
    // parallax(parallax_img, 750px, 0.65)
    parallax(height: 100%, opacity: 0.95, image: parallax2_img)

.parallax3
    parallax(height: 100%, opacity: 0.95, image: parallax3_img)

.parallax4
    parallax(height: 100%, opacity: 0.95, image: parallax4_img)

.content1
    content(parallax1_img)

.content2
    content(parallax2_img)

.content3
    content(parallax3_img)
